@model SalesMVC.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>
<div class="container">
    <form method="post" asp-controller="Account" asp-action="Login" class="form-horizontal" asp-route-returnurl="@Model.ReturnUrl">
        <div class="form-group">
            <label asp-for="Email" class="control-label col-lg-2"></label>
            <div class="col-lg-4">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label col-lg-2"></label>
            <div class="col-lg-4">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-lg-offset-2 col-lg-4">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
   <script>
       $(function () {
           if ("@Model.CheckEmailAndPassword" == "False") {
               $("#@nameof(Model.Email), #@nameof(Model.Password)").addClass("borderRed");
           }
       });
    </script>
}